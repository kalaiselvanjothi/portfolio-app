@model AboutViewModel

@{
    ViewData["Title"] = "About";
    var personalInformation = Model.PersonalInformation;
    var skills = Model.Skills;
}
<div class="row g-4">
    <div class="col-lg-7" data-aos="fade-right">
        <h2 class="h3 fw-semibold mb-3">About Me</h2>
        <p class="text-muted">@personalInformation.Bio</p>
        <ul class="list-unstyled small text-muted">
            @{
                foreach (var skill in skills.GroupBy(s => s.Category))
                {
                    <li>âœ” @skill.Key: @string.Join(", ", skill.Select(s => s.Name))</li>
                }
            }
        </ul>
    </div>
    <div class="col-lg-5" data-aos="fade-left">
        <div class="glass-card p-4">
            <h3 class="h6 text-uppercase text-muted">Contact</h3>
            <div class="vstack gap-1">
                <span><i class="fa-solid fa-envelope me-2"></i>@personalInformation.Email</span>
                <span><i class="fa-solid fa-phone me-2"></i>@personalInformation.Phone</span>
                <span><i class="fa-brands fa-linkedin me-2"></i> <a href="@personalInformation.LinkedIn" target="_blank" rel="noopener">LinkedIn</a></span>
            </div>
        </div>
    </div>
</div>
