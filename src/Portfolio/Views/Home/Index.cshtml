@model IndexViewModel

@{
    ViewData["Title"] = "Home";
    var personalInformation = Model.PersonalInformation;

}
<section class="hero py-5">
    <div class="row align-items-center g-4">
        <div class="col-lg-7" data-aos="fade-right">
            <h1 class="display-5 fw-bold lh-1 mb-3 gradient-text">Hi, I'm @personalInformation.Name<span class="accent">.</span></h1>
            <p class="lead text-muted">@personalInformation.Title</p>
            <div class="d-flex gap-3 mt-4">
                <a class="btn btn-3d" asp-controller="Portfolio" asp-action="Projects">View Projects</a>
                <a class="btn btn-3d" asp-controller="Portfolio" asp-action="Resume">Download Resume</a>
            </div>
            <div class="stack-badges mt-4">
                @foreach (var skill in Model.Skills)
                {
                    <span class="badge text-bg-secondary">@skill.Name</span>
                }
            </div>
        </div>
        <div class="col-lg-5" data-aos="fade-left">
            <div class="col-lg-5 text-center" data-aos="fade-left">
                <img src="@personalInformation.ProfileImageUrl" class="w-100 mx-auto floating profile-photo" alt="Kalaiselvan portrait" />
            </div>


        </div>
    </div>
</section>

<section class="mt-5">
    <h2 class="h3 fw-semibold mb-3">Featured Work</h2>
    <div class="row g-4">
        @foreach (var project in Model.Projects)
        {
            <div class="col-md-6" data-aos="zoom-in" data-aos-delay="50">
                <div class="project-card card h-100 lift">
                    <img src="@project.Image" class="card-img-top" alt="@project.Title" />
                    <div class="card-body">
                        <h3 class="h5 card-title">@project.Title</h3>
                        <p class="card-text text-muted">@project.Description</p>
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @foreach (string tag in project.Tags)
                            {
                                <span class="badge rounded-pill text-bg-dark">@tag</span>
                            }
                        </div>
                        <div class="d-flex gap-2">
                            @if (!string.IsNullOrWhiteSpace(project.RepoUrl))
                            {
                                <a class="btn btn-sm btn-outline-light" href="@project.RepoUrl" target="_blank" rel="noopener">Code</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
