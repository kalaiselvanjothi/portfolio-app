@model BaseViewModel

@{
    var title = ViewData["Title"] as string ?? "Portfolio";
    var personalInformation = Model.PersonalInformation;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body data-bs-theme="dark">
    <div class="noise-bg"></div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-transparent sticky-top blur-backdrop py-3">
        <div class="container">
            <a class="navbar-brand fw-bold tracking-tight" href="/">@personalInformation.Name's Portfolio<span class="accent">.</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="nav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="About">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Skills">Skills</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Certificates">Certificates</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Education">Education</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Resume">Resume</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    </header>
    <main class="flex-grow-1 container my-5">
    @RenderBody()
    </main>
    
    <footer class="container py-5 small text-muted">
        <div class="d-flex justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year @personalInformation.Name</span>
            <div class="d-flex gap-3">
                <a class="text-muted" href="mailto:@personalInformation.Email"><i class="fa-solid fa-envelope"></i></a>
                <a class="text-muted" href="tel:@personalInformation.Phone"><i class="fa-solid fa-phone"></i></a>
                <a class="text-muted" href="@personalInformation.LinkedIn" target="_blank" rel="noopener"><i class="fa-brands fa-linkedin"></i></a>
                <a class="text-muted" href="@personalInformation.GitHub" target="_blank" rel="noopener"><i class="fa-brands fa-github"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
