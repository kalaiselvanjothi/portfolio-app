@model ProjectViewModel

@{
    ViewData["Title"] = "Projects";
}
<h2 class="h3 fw-semibold mb-3" data-aos="fade-down">Projects</h2>
<div class="row g-4">
    @foreach (var project in Model.Projects)
    {
        <div class="col-md-6" data-aos="fade-up">
            <div class="project-card card h-100 lift">
                <img src="@project.Image" class="card-img-top" alt="@project.Title" />
                <div class="card-body">
                    <h3 class="h5">@project.Title</h3>
                    <p class="text-muted">@project.Description</p>
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        @foreach (var tag in project.Tags)
                        {
                            <span class="badge rounded-pill text-bg-dark">@tag</span>
                        }
                    </div>
                    <div class="d-flex gap-2">
                        @if (!string.IsNullOrWhiteSpace(project.RepoUrl))
                            {
                             <a class="btn btn-sm btn-electric" href="@project.RepoUrl" target="_blank" rel="noopener"> Code</a>
                            }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
